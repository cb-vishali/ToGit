<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" >

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet>
	    <servlet-name>welcome</servlet-name>
	    <servlet-class>Welcome</servlet-class>
    </servlet>
    <servlet>
	    <servlet-name>SaveDetails</servlet-name>
	    <servlet-class>SaveDetails</servlet-class>
    </servlet>
    <servlet>
	    <servlet-name>AddAddress</servlet-name>
	    <servlet-class>AddAddress</servlet-class>
    </servlet>
    <servlet>
	    <servlet-name>viewDetails</servlet-name>
	    <servlet-class>viewDetails</servlet-class>
    </servlet>
    <servlet>
	    <servlet-name>DeActivate</servlet-name>
	    <servlet-class>DeActivate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>welcome</servlet-name>
	    <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>	 
    <servlet-mapping>
	    <servlet-name>SaveDetails</servlet-name>
	    <url-pattern>/SaveDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>AddAddress</servlet-name>
	    <url-pattern>/AddAddress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>viewDetails</servlet-name>
	    <url-pattern>/viewDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>DeActivate</servlet-name>
	    <url-pattern>/DeActivate</url-pattern>
    </servlet-mapping>   

    <welcome-file-list>
	    <welcome-file>index.html</welcome-file>
	    <welcome-file>signup.html</welcome-file>
    </welcome-file-list>

</web-app>


